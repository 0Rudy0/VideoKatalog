@model IEnumerable<VideoKatalog.WebApp.Movie>
@using VideoKatalog.WebApp
@using System.Linq

@{
    ViewBag.Title = "Filmovi";
    //VideoKatalog.WebApp.VideoDatabaseEntities context = new VideoKatalog.WebApp.VideoDatabaseEntities();
