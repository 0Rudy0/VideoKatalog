@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
       
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/jqMobile/jquery.mobile-1.4.2.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/_LayoutMobile.css" />
</head>
<body>
    <div data-role="page">
        <div data-role="panel" id="navigationPanel" data-display="overlay">
            <ul data-role="listview">
                <li data-role="list-divider" data-theme="b">Navigacija</li>
                <li><a href="~/Movie/List" data-ajax="false">Filmovi</a></li>
                <li><a href="~/Serie/List" data-ajax="false">Serije</a></li>
                <li data-role="list-divider" data-theme="b">Filtriranje</li>
                <li><a href="~/Movie/Filter" data-ajax="false">Filtriraj filmove</a></li>          
                <li data-role="list-divider" data-theme="b">Odabrano</li>
                <li><a href="~/Movie/SelectedList" data-ajax="false">Odabrani filmovi</a></li>
                <li><a href="#" data-ajax="false">Odabrane serije</a></li>
            </ul>
        </div>
        <div data-role="header" data-theme="b">
            <a id="navText" href="#navigationPanel" data-rel="close" class="ui-btn ui-icon-bars ui-btn-icon-notext ui-corner-all">Navigacija</a>
            <h1>@ViewBag.Title</h1>
        </div>
        <div role="main" class="ui-content">
            @RenderBody()
        </div>
        <div id="footer" data-role="footer" data-position="fixed" data-fullscreen="true">
            <h4 id="selectedSize">Odabrano: 0.00 GB</h4>
        </div>
    </div>

    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.mobile-1.4.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/_LayoutMobile.js" type="text/javascript"></script>
    <script src="~/Scripts/fastclick.js" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
