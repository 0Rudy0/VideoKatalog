@using VideoKatalog.WebApp;


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale = 0.05,maximum-scale = 2.0" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="../Content/_Layout.css" type="text/css" />
    <link rel="stylesheet" href="../Content/bootstrap/bootstrap-3.0.3.min.css" type="text/css" />
    <link rel="stylesheet" href="../Content/bootstrap/bootstrap-multiselect.css" type="text/css" />
    <link rel="stylesheet" href="../Scripts/jqwidgets/styles/jqx.base.css" type="text/css" />
    <link rel="stylesheet" href="../Scripts/jqwidgets/styles/jqx.darkblue.css" type="text/css" />
    <link href="../Content/fonts.min.css" rel="stylesheet" type="text/css" />
    <link href="../Content/slidingMenu.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="../Content/jquery.nouislider.css" type="text/css" />
</head>
<body>
    <!--NAVIGATION BLOCK-->
    <div id="navigation-block">
        <img src="../images/background.jpg" id="hide" />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <ul id="sliding-navigation">
            <li class="sliding-element"><a href="../Movie/List">Filmovi</a></li>
            <li class="sliding-element"><a href="../Serie/List">Serije</a></li>
            <li class="sliding-element"><a href="#" target="_blank">Video uzorci</a></li>
        </ul>
    </div>
    @RenderBody()
    <script type="text/javascript">
		$(document).ready(function () {
			var logo = $('center')[0];
			if (logo != null) {
				logo.css('display', 'none');
			}
		}
    </script>
    <script type="text/javascript" src="../Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="../Scripts/bootstrap/bootstrap-3.0.3.min.js"></script>
    <script type="text/javascript" src="../Scripts/bootstrap/bootstrap-multiselect.js"></script>
    <script type="text/javascript" src="../Scripts/jqwidgets/jqxcore.js"></script>
    <script type="text/javascript" src="../Scripts/jqwidgets/jqxwindow.js"></script>
    <script src="../Scripts/slidingElement.js" type="text/javascript"></script>
    <script type="text/javascript" src="../Scripts/jquery.nouislider.js"></script>
    @Scripts.Render("~/bundles/modernizr2")
    @RenderSection("Scripts", required: false)
</body>
</html>
