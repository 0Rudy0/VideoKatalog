<Window x:Class="Video_katalog.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner" Title="InputDialog" Height="142" Width="475">
    <Grid Margin="0">
        <TextBox Height="36" HorizontalAlignment="Left" Margin="8,16,0,0" Name="inputTextBox" VerticalAlignment="Top" Width="432" FontSize="18.667" MaxLines="1" FontFamily="Palatino Linotype" Padding="6,2,1,1" Foreground="#FF1C6B85" >
        	<TextBox.Effect>
        		<DropShadowEffect Direction="324"/>
        	</TextBox.Effect>
        </TextBox>
        <Button Content="OK" Height="27" Margin="0,64,115,0" Name="okButton" VerticalAlignment="Top" FontSize="15" FontWeight="SemiBold" Click="okButton_Click" IsDefault="True" HorizontalAlignment="Right" Width="80" />
        <Button Content="Cancel" Height="27" HorizontalAlignment="Left" Margin="360,64,0,0" Name="cancelButton" VerticalAlignment="Top" Width="80" FontSize="15" FontWeight="SemiBold" Click="cancelButton_Click" />
    </Grid>
</Window>
